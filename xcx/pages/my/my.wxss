page {
  background-color: #eee;
}

.header {
  width: 750rpx;
  height: 200rpx;
  background-color: #0097fe;
}

.header-img {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}

.header-name {
  color: #fff;
  margin-left: 200rpx;
  line-height: 80rpx;
  font-size: 50rpx;
  padding-top: 19px;
}

.header-phone {
  color: #fff;
  margin-left: 200rpx;
  font-size: 20rpx;
}

.body {
  background-color: #fff;
  margin-top: 20rpx;
}

.item {
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  position: relative;
}

.item-img {
  width: 48rpx;
  height: 48rpx;
  margin-left: 30rpx;
}

.item-text {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
  color: #333;
}

.item-more {
  width: 16rpx;
  height: 30rpx;
  float: right;
  position: absolute;
  right: 30rpx;
}

.btn {
  margin-top: 30rpx;
  background-color: #fff;
  color: #e43635;
  border-radius: 0;
}

button::after {
  border: none;
}
