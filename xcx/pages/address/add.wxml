<form bindsubmit="bindSave">
  <view class="form-box">
    <view class="row-wrap">
      <view class="label">联系人</view>
      <view class="label-right">
        <input name="linkMan" class="input" type="text" placeholder="姓名" value="{{linkMan}}" />
      </view>
    </view>
    <view class="row-wrap">
      <view class="label">手机号码</view>
      <view class="label-right">
        <input name="mobile" class="input" maxlength="11" type="number" placeholder="11位手机号码" value="{{mobile}}" />
      </view>
    </view>
    <view class="addr-details">
      <view class="label">详细地址</view>
      <view class="label-right">
        <textarea name="address" auto-height placeholder="详细地址（如门牌号等）" value="{{address}}" />
      </view>
    </view>
  </view>
  <button class="save-btn" formType="submit">确定</button>
</form>